<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="PlantBase">
    <defName>PlantCactus</defName>
    <label>cactus</label>
    <description>A decorative desert cactus with colorful flowers. It's not as pretty as other flowers, but lasts a long time.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>11</Beauty>
      <Nutrition>0.25</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Cactus/decorativeCactus</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>
    <ingestible />
    <plant>
      <fertilitySensitivity>0.4</fertilitySensitivity>
      <dieIfLeafless>false</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <sowWork>600</sowWork>
      <sowTags>
        <li>Ground</li>
        <li>Decorative</li>
      </sowTags>
      <growMinGlow>0.3</growMinGlow>
      <topWindExposure>0.3</topWindExposure>
      <growDays>1.2</growDays>
      <lifespanDaysPerGrowDays>10</lifespanDaysPerGrowDays>
      <visualSizeRange>
        <min>0.4</min>
        <max>0.8</max>
      </visualSizeRange>
      <wildOrder>1</wildOrder>
      <purpose>Beauty</purpose>
    </plant>
  </ThingDef>
  <ThingDef ParentName="PlantBase" Name="GoldAgaveBase">
    <defName>PlantGoldAgave</defName>
    <label>gold agave plant</label>
    <description>Specialized agave developed over many generations by Cactoid farmers.  Survives well in cold conditions and yeilds great fruit even in poor soil.  Only the Cactoids know the methods of cultivation.</description>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Nutrition>2.2</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/goldAgave/goldAgave</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>20</pathCost>
    <ingestible />
    <plant>
      <fertilitySensitivity>0.3</fertilitySensitivity>
      <dieIfLeafless>false</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>RawAgave</harvestedThingDef>
      <harvestYield>12</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.1</topWindExposure>
      <growDays>6.3</growDays>
      <immatureGraphicPath>Things/Plant/goldAgaveImmature/goldAgaveImmature</immatureGraphicPath>
      <visualSizeRange>
        <min>0.3</min>
        <max>1</max>
      </visualSizeRange>
      <wildOrder>2</wildOrder>
      <purpose>Food</purpose>
    </plant>
  </ThingDef>
</Defs>